<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/web-app"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/web-app https://jakarta.ee/xml/web-app/web-app_6_0.xsd"
         version="6.0">

    <!-- login -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- prevision -->
    <servlet>
        <servlet-name>PrevisionServlet</servlet-name>
        <servlet-class>servlet.service.PrevisionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrevisionServlet</servlet-name>
        <url-pattern>/ajoutprevision</url-pattern>
    </servlet-mapping>
    <!-- depense -->
    <servlet>
        <servlet-name>DepenseServlet</servlet-name>
        <servlet-class>servlet.service.DepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepenseServlet</servlet-name>
        <url-pattern>/ajoutdepense</url-pattern>
    </servlet-mapping>


</web-app>